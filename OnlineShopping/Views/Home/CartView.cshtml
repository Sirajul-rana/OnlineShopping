@model IEnumerable<OnlineShopping.Models.Product>

@{
    ViewBag.Title = "CartView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Shopping Cart</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product_price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product_vat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product_discount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product_picture_path)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product_quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product_description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sub_Category_Id)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_vat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_discount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_picture_path)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Size_Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sub_Category_Id)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Product_Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Product_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Product_Id })
        </td>
    </tr>
}

</table>
