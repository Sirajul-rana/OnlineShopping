@using OnlineShopping
@model IEnumerable<OnlineShopping.Models.Product>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<center>
    <div id="Row" class="row" style="padding: 40px;">
        @foreach (var item in Model)
        {
            <div title="productView" class="col-md-4 portfolio-item" style="height: 350px; width: 250px; border: 2px solid darkgray; border-radius: 15px 50px 30px; margin: 5px;">
                <div class="row">
                    <span style="height: 150px; width: 150px;"><img id="Photo1" src="data:image/gif;base64,@Html.DisplayFor(modelItem => item.Product_picture_path)" style="height: 150px; width: 150px; margin-top: 10px" /></span>
                </div>
                <div class="row">
                    <h5 id="name" style="width:230px; overflow:hidden;text-overflow:ellipsis; white-space:nowrap;">
                        @Html.ActionLink(item.Product_name, "Details", new { id = item.Product_Id })
                    </h5>
                </div>
                <div class="row">
                    <p title="somearea" style="width:200px; overflow:hidden;text-overflow:ellipsis; white-space:nowrap;" @*style="height: 50px; width: 200px; overflow: hidden; text-align: center;"*@>@Html.DisplayFor(modelItem => item.Product_description)</p>
                </div>
                <div class="row">
                    <p style="text-align: center; font-weight: bold" title="productPrice">Price: @Html.DisplayFor(modelItem => item.Product_price)Tk</p>
                </div>
                <div class="row">
                    <div class="btn-group cart">
                        <button type="button" class="btn btn-success">
                            Cart
                        </button>
                    </div>
                    <div class="btn-group wishlist">
                        <button type="button" class="btn btn-danger">
                            Wishlist
                        </button>
                    </div>
                </div>
            </div>
            
        }


    </div>
</center>
<script type="text/javascript">
    $(window).load(function () {
        $("#somearea").text($("#somearea").text().substring(0, 300));
    });

    $(document).ready(function () {

        $(".btn").on("click", function () {
            var now = $("#cartLabel").html();
            if ($.isNumeric(now)) {
                $("#cartLabel").html(parseInt(now) + 1);
            } else {
                alert("worked");
                $("#cartLabel").html("0");
            }
        });


        $('[title="somearea"]').text().substring(0, 300);
        $('[title="productView"]').hover(function () {
            $(this).css('border', '2px solid crimson');
        }, function () {
            $(this).css('border', '2px solid darkgray');
        });

    });
</script>