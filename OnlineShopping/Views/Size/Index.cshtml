@model IEnumerable<OnlineShopping.Models.Size>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Size_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Size_name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Size_Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Size_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Size_Id })
        </td>
    </tr>
}

</table>
