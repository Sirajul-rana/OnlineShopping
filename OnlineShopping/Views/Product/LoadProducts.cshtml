@model IEnumerable<OnlineShopping.Models.Product>

@{
    ViewBag.Title = "LoadProducts";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>LoadProducts</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Product Image")
        </th>
        <th>
            @Html.DisplayName("Product Name")
        </th>
        <th>
            @Html.DisplayName("Product Description")
        </th>
        <th>
            @Html.DisplayName("Product Price")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            <span style="height: 150px;width: 150px;"><img id="Photo1" src="data:image/gif;base64,@Html.DisplayFor(modelItem => item.Product_picture_path)" style="height: 150px; width: 150px;" /></span>
        </td>
        <td>
            @Html.ActionLink(item.Product_name, "Details", new { id = item.Product_Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product_price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Product_Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Product_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Product_Id })
        </td>
    </tr>
}

</table>
